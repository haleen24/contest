#include <iostream>
#include <fstream>
#include <string>


int main()
{
	std::string str;

	/* if we read from file :

	std::ifstream file("");

	getline(file, str);

	*/

	getline(std::cin, str);

	int tmp = str.find("heavy");

	while (tmp != -1) {

		str.replace(tmp, 5, "1");

		tmp = str.find("heavy");

	}

	tmp = str.find("metal");

	while (tmp != -1) {

		str.replace(tmp, 5, "2");

		tmp = str.find("metal");

	}

	_int64 kolvo_1 = 0, result = 0;

	for (int i = 0; i < str.length(); i++) {

		if (str[i] == '1') {

			kolvo_1++;

		}

		else if (str[i] == '2') {

			result += kolvo_1;

		}

	}

	std::cout << result;
}
